<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/popup_border_bg">

    <ImageView
        android:id="@+id/alert_box_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/cross"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />
    <RelativeLayout
        android:id="@+id/rl_alert_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_alert_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Alert Message"
            android:textColor="@color/colorYellowDark"
            android:textSize="20sp"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/brownlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:padding="20dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rl_alert_header"
        android:layout_margin="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_alert_message"
                android:layout_centerHorizontal="true"
                android:text="Error Message"
                android:textColor="@color/colorWhite"
                android:layout_margin="10dp"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/brownlayout">
        <TextView
            android:id="@+id/tv_alert_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/greenbtnbgcolor"
            android:text="OK"
            android:padding="10dp"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:textColor="@color/colorBlack"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>
</RelativeLayout>