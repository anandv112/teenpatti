<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="affwl.com.exchange.PlayasguestActivity"
    android:background="@drawable/bg3"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/cross" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_margin="0dp"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:src="@drawable/dts" />

        <!--Layout for avatar-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:padding="5dp"
            android:orientation="horizontal"
            android:background="#250400"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:id="@+id/avatar1"
                android:src="@drawable/avatar1" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:id="@+id/avatar2"
                android:src="@drawable/avatar2" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:id="@+id/avatar3"
                android:src="@drawable/avatar3" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:id="@+id/avatar4"
                android:src="@drawable/avatar4" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:id="@+id/avatar5"
                android:src="@drawable/avatar5" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:id="@+id/avatar6"
                android:src="@drawable/avatar6" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:id="@+id/avatar7"
                android:src="@drawable/avatar7" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:id="@+id/avatar8"
                android:src="@drawable/avatar8" />

        </LinearLayout>

        <!--Layout for camera and gallary-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:id="@+id/camera"
                android:src="@drawable/btncamera" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:id="@+id/choosepic"
                android:src="@drawable/btnchoosepic" />
        </LinearLayout>

        <!--Layout for Edit text and login Button-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginTop="15dp"
                    android:id="@+id/selectimage"
                    android:src="@drawable/userpicborder" />
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="6dp"
                    android:id="@+id/avatarimage"
                    android:layout_gravity="center"/>
            </FrameLayout>
            <EditText
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/user_edit"
                android:hint="@string/user_name"
                android:paddingLeft="10dp"
                android:textSize="12sp"
                />

            <TextView
                android:layout_width="85dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="27dp"
                android:background="@drawable/btnlogin_of_playguest"
                android:text="Login"
                android:textSize="12sp"
                android:paddingTop="10dp"
                android:textColor="#ffffff"
                android:paddingLeft="37dp"
                android:onClick="sendMainpage"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
